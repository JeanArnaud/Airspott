{
    "name": "Sale",
    "base": "PersistedModel",
    "description": "A Sale represents a Cart that was sent to be payed. It keeps track of Buyers, SaleProducts and Payment",
    "idInjection": true,
    "options": {
        "validateUpsert": true
    },
    "properties": {
        "date": {
            "type": "date",
            "defaultFn": "now",
            "description": "The timestamp of the Sale (autogenerated)"
        }
    },
    "validations": [],
    "relations": {
        "buyer": {
            "type": "belongsTo",
            "model": "Buyer",
            "foreignKey": "",
            "description": "Each Sale has to have a Buyer"
        },
        "saleProducts": {
            "type": "hasMany",
            "model": "SaleProduct",
            "foreignKey": "",
            "description": "Each Sale consists of Products to be sold"
        },
        "payments": {
            "type": "hasMany",
            "model": "Payment",
            "foreignKey": "",
            "description": "Each Sale has one or more (if failed) Payments"
        }
    },
    "acls": [],
    "methods": {}
}
