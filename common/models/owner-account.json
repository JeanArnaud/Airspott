        "iban": {
            "type": "string",
            "required": true,
            "description": "The IBAN of the OwnerAccount to payout"
        },
        "bic": {
            "type": "string",
            "required": true,
            "description": "The BIC of the OwnerAccount to payout"
        },
        "salesCommission": {
            "type": "number",
            "required": true,
            "default": 0.2,
            "description": "The Customers commission"
        },
        "toc": {
            "type": "string",
            "required": true,
            "description": "The TOC version accepted by the Customer"
